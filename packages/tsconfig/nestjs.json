{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "display": "Nest.js",
  "compilerOptions": {
    "target": "ES5",
    "noEmit": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "preserve",
    "incremental": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
